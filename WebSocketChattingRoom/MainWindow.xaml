<Window x:Class="WebSocketChattingRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="聊天室服务端" Height="423" Width="431">
    <Grid>
        <Button Content="打开聊天服务器" HorizontalAlignment="Right" Margin="0,10,21,0" VerticalAlignment="Top" Width="104" Click="OnOpenWSServer" Height="26"/>
        <Button Content="关闭聊天服务器" HorizontalAlignment="Right" Margin="0,41,21,0" VerticalAlignment="Top" Width="104" Click="OnCloseWSServer" Height="26"/>
        <Button Content="设置" HorizontalAlignment="Right" Margin="0,0,21,10" Width="104" Height="26" VerticalAlignment="Bottom" Click="OpenSettingWindow"/>
        <Button Content="清空" HorizontalAlignment="Right" Margin="0,0,21,41" Width="104" Height="26" VerticalAlignment="Bottom" Click="ClearList"/>
        <ListBox x:Name="MessageWindow" Margin="10,10,130,10"/>
        
    </Grid>
</Window>
